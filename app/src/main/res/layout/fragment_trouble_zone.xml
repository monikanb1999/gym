<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.plans.TroubleZoneFragment">
        <!--    android:background="#C9FFFA"-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BEGINNERS"
            android:textStyle="bold"
            android:textSize="25dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="20dp"
            android:id="@+id/textbegin" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ABS BEGINNER"
            android:id="@+id/absbegin"
            app:layout_constraintTop_toBottomOf="@id/textbegin"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/absiv"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textbegin"
                android:src="@drawable/abs"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CHEST BEGINNER"
            app:layout_constraintTop_toBottomOf="@id/absiv"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

        <ImageView
            android:id="@+id/chestiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/chest1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/absiv" />






    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>